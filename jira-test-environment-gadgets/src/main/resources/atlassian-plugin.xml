<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/apwide-environments-gadget-icon.png</param>
        <param name="plugin-logo">images/apwide-environments-gadget-logo.png</param>
    </plugin-info>

    <!-- GADGETS -->

	<gadget key="apwide-env-gadget-environments" name="Apwide Environments Gadget"
		location="gadget/environments/apwide-environments-gadget.xml">
		<description>Displays Apwide's apps environment's data</description>
	</gadget>

	<!-- Webresources for Environments Gadget -->
	<web-resource key="apwide-env-gadget-environments-resources" name="apwide-env-gadget-environments-resources">
		<dependency>com.atlassian.auiplugin:ajs</dependency>
		<dependency>com.atlassian.auiplugin:aui-table-sortable</dependency>
		<resource type="download" name="images/" location="gadget/environments/images" />
		<resource type="download" name="gadget.js" location="gadget/environments/gadget.js" />
    <resource type="download" name="gadget.css" location="gadget/environments/gadget.css" />
    <resource type="download" name="dynatable.css" location="vendor/jquery.dynatable.css" />
    <resource type="download" name="dynatable.js" location="vendor/jquery.dynatable.js" />
		<context>apwide-env-gadget-environments</context>
	</web-resource>

	<resource type="download" name="gadget/environments/messages.xml"
		location="gadget/environments/messages.xml">
		<param name="content-type" value="text/xml; charset=UTF-8" />
	</resource>
</atlassian-plugin>
